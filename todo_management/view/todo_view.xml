<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="todo_management.list">
      <field name="name">todo list</field>
      <field name="model">To_Do_model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="partner_id"/>
          <field name="description"/>
          <field name="date"/>
           <field name="status"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="todo_management.action_window">
      <field name="name">todo_management window</field>
      <field name="res_model">To_Do_model</field>
      <field name="view_mode">tree,form</field>
    </record>


